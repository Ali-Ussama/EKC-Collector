<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollAttributes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4faff"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#68a6d2"
            android:paddingLeft="10dp"
            android:paddingTop="8dp"
            android:paddingRight="10dp"
            android:paddingBottom="8dp"
            android:text="@string/attributes"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold" />

<!--        <Spinner-->
<!--            android:id="@+id/type_spinner"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="10dp"-->
<!--            android:padding="4dp"-->
<!--            android:prompt="@string/type" />-->

        <EditText
            android:id="@+id/mCodeEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="الكود"
            android:inputType="number" />

        <EditText
            android:id="@+id/device_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="رقم الجهاز"
            android:inputType="text" />

        <!--        <EditText-->
        <!--            android:id="@+id/generated_code"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:hint="الكود المصطنع"-->
        <!--            android:inputType="number"/>-->

        <LinearLayout
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />

        <TextView
            android:id="@+id/tvAttachment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#68a6d2"
            android:paddingLeft="10dp"
            android:paddingTop="8dp"
            android:paddingRight="10dp"
            android:paddingBottom="8dp"
            android:text="@string/attachments"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold" />

        <HorizontalScrollView
            android:id="@+id/hsAttachments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <LinearLayout
                android:id="@+id/lnAttachments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />

        </HorizontalScrollView>
    </LinearLayout>
</ScrollView>
